{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "@cloudflare/workers-types",
      "vitest/global"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/types.d.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
